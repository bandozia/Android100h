<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.impacta.android100h">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".lab01.app.controller.SplashActivity"
            android:noHistory="true"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".lab01.app.controller.MainActivity"></activity>
        <activity android:name=".lab02.app.controller.MegaSenaActivity"></activity>
        <activity android:name=".lab03.app.controller.GorjetaActivity"></activity>
        <activity android:name=".lab04.app.controller.IntentActivity"></activity>
        <activity android:name=".lab05.app.controller.CPFActivity"></activity>

        <activity android:name=".lab06.app.controller.JogoVelhaActivity"
            android:screenOrientation="portrait"></activity>

    </application>

</manifest>
