<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/AppTheme.Lab01.Title"
        android:text="@string/lab01_bt_camera" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/lab04_dimen_3"
        android:orientation="horizontal">

        <Button
            android:id="@+id/lab04_bt_imagem_capturar"
            style="?android:buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@android:drawable/ic_menu_camera"
            android:text="@string/lab04_bt_imagem_capturar"/>

        <Button
            android:id="@+id/lab04_bt_video_capturar"
            style="?android:buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@android:drawable/ic_menu_camera"
            android:text="@string/lab04_bt_video_capturar"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/lab04_fl_camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

</LinearLayout>